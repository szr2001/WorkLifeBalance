<Window
    AllowsTransparency="True"
    Background="Transparent"
    MaxHeight="{Binding WindowService.LoadedPage.PageHeight, Mode=TwoWay}"
    MaxWidth="{Binding WindowService.LoadedPage.PageWidth, Mode=TwoWay}"
    MinHeight="{Binding WindowService.LoadedPage.PageHeight, Mode=TwoWay}"
    MinWidth="{Binding WindowService.LoadedPage.PageWidth, Mode=TwoWay}"
    ResizeMode="NoResize"
    Title="SecondWindow"
    WindowStyle="None"
    mc:Ignorable="d"
    x:Class="WorkLifeBalance.SecondWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WorkLifeBalance"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Grid.RowSpan="2">
        <Grid.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1" />
        </Grid.RenderTransform>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition Height="65" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Border
            CornerRadius="8"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            Grid.Row="0"
            MouseDown="MoveWindow">
            <Border.Background>
                <LinearGradientBrush EndPoint="0,0" StartPoint="0,1">
                    <GradientStop Color="{StaticResource WBlueShadowC}" Offset="0" />
                    <GradientStop Color="{StaticResource WBlueC}" Offset="0.5" />
                    <GradientStop Color="{StaticResource WBlueHighlightC}" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Color="Black"
                    Opacity="0.5"
                    ShadowDepth="5" />
            </Border.Effect>
            <Grid>
                <TextBlock
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    HorizontalAlignment="Left"
                    Margin="15,0,0,0"
                    Text="{Binding WindowService.LoadedPage.PageName}"
                    VerticalAlignment="Center" />
                <Button
                    Command="{Binding CloseWindowCommand}"
                    Height="25"
                    HorizontalAlignment="Right"
                    Margin="4,4,15,4"
                    Style="{StaticResource RedRoundedBtnStyle}"
                    Template="{StaticResource SlightRoundedBtnTemp}"
                    Width="80">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="1" Source="Assets/Cancel.png" />
                        <TextBlock
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Close"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
        <Border
            CornerRadius="0,0,8,8"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Grid.Row="1"
            Grid.RowSpan="2">
            <Border.Background>
                <LinearGradientBrush EndPoint="0,0" StartPoint="0,1">
                    <GradientStop Color="{StaticResource WDarkPurpleShadowC}" Offset=".8" />
                    <GradientStop Color="{StaticResource WDarkPurpleC}" Offset="0.3" />
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Color="Black"
                    Opacity="0.5"
                    ShadowDepth="5" />
            </Border.Effect>
            <Frame Content="{Binding WindowService.LoadedPage}" NavigationUIVisibility="Hidden" />
        </Border>
    </Grid>
</Window>
