<Window x:Class="WorkLifeBalance.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkLifeBalance" 
        mc:Ignorable="d" Background="Transparent"
        ResizeMode="NoResize" AllowsTransparency="True"
        WindowStyle="None" Title="PopupWindow" 
        MinHeight="{Binding WindowService.LoadedPage.PageHeight, Mode = TwoWay}"
        MinWidth="{Binding WindowService.LoadedPage.PageWidth, Mode = TwoWay}"
        MaxHeight="{Binding WindowService.LoadedPage.PageHeight, Mode = TwoWay}" 
        MaxWidth="{Binding WindowService.LoadedPage.PageWidth, Mode = TwoWay}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0" 
                CornerRadius="8" MouseDown="MoveWindow">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                    <GradientStop Color="{StaticResource WBlueShadowC}" Offset="0"/>
                    <GradientStop Color="{StaticResource WBlueC}" Offset="0.5"/>
                    <GradientStop Color="{StaticResource WBlueHighlightC}" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <TextBlock Text="{Binding WindowService.LoadedPage.PageName}" FontWeight="Bold"
                           HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0" Foreground="White" FontSize="20"/>
            </Grid>
        </Border>
        <Border CornerRadius="0,0,8,8" Grid.Row="1" Grid.RowSpan="2">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                    <GradientStop Color="{StaticResource WDarkPurpleShadowC}" Offset=".8"/>
                    <GradientStop Color="{StaticResource WDarkPurpleC}" Offset="0.3"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            <Frame Content="{Binding WindowService.LoadedPage}"
                   NavigationUIVisibility="Hidden">

            </Frame>
        </Border>
    </Grid>
</Window>
